<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="348.0dip"
    android:layout_height="378.0dip"
    android:layout_marginTop="-6.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/background"
        android:background="@color/transparent"
        android:layout_width="348.0dip"
        android:layout_height="378.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="348.0dip"
            android:layout_height="25.0dip"
            />
        <ImageView
            android:background="@color/transparent"
            android:layout_width="348.0dip"
            android:layout_height="202.0dip"
            android:src="@drawable/background_top"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:background="@drawable/background_middle"
            android:layout_width="348.0dip"
            android:layout_height="57.0dip"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:background="@color/transparent"
            android:layout_width="348.0dip"
            android:layout_height="85.0dip"
            android:src="@drawable/background_bottom"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
    <TextView
        android:id="@id/album_art_place_holder"
        android:background="@color/transparent"
        android:layout_width="241.0dip"
        android:layout_height="227.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <android.widget.MusicWidgetView
        android:id="@id/music_widget_view"
        android:layout_width="241.0dip"
        android:layout_height="227.0dip"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@id/albumart_veil"
        android:background="@drawable/albumart_veil"
        android:layout_width="241.0dip"
        android:layout_height="141.0dip"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/info_layout"
        android:background="@color/transparent"
        android:layout_width="348.0dip"
        android:layout_height="50.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="230.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="18.0sp"
            android:typeface="sans"
            android:textColor="@color/track_name"
            android:gravity="center|clip_horizontal"
            android:id="@id/track"
            android:layout_width="348.0dip"
            android:layout_height="wrap_content"
            android:text="@string/no_songs"
            android:singleLine="true"
            />
        <TextView
            android:textSize="13.0sp"
            android:typeface="sans"
            android:textColor="@color/artist_album"
            android:gravity="center|clip_horizontal"
            android:id="@id/artist_album"
            android:visibility="gone"
            android:layout_width="348.0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    </LinearLayout>
    <ImageButton
        android:id="@id/button_prev"
        android:background="@color/transparent"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginTop="58.0dip"
        android:src="@drawable/btn_prev"
        android:scaleType="fitXY"
        android:layout_below="@id/album_art_place_holder"
        android:layout_alignParentLeft="true"
        />
    <ImageButton
        android:id="@id/button_pause_play"
        android:background="@color/transparent"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginTop="58.0dip"
        android:src="@drawable/btn_play"
        android:scaleType="fitXY"
        android:layout_below="@id/album_art_place_holder"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@id/button_next"
        android:background="@color/transparent"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginTop="58.0dip"
        android:src="@drawable/btn_next"
        android:scaleType="fitXY"
        android:layout_below="@id/album_art_place_holder"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
