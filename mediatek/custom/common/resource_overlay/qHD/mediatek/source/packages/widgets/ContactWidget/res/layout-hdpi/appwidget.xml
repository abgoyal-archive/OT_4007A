<?xml version="1.0" encoding="UTF-8"?>
<android.widget.ContactWidgetRemoteView
    android:id="@id/favorites_contacts_remote_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.widget.ViewPusher
        android:orientation="horizontal"
        android:id="@id/favorites_contacts_animview"
        android:tag="tag_favorites_contacts_animview"
        android:paddingTop="75.0dip"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:background="@drawable/frame"
                android:layout_width="fill_parent"
                android:layout_height="378.0dip"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:gravity="center_horizontal"
                android:id="@id/favorite_friend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textSize="21.0sp"
                    android:typeface="sans"
                    android:textColor="@color/favorites_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0px"
                    android:text="@string/favorites"
                    android:singleLine="true"
                    />
                <TextView
                    android:textSize="21.0sp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0px"
                    android:text="@string/favorites"
                    android:singleLine="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:paddingLeft="9.0dip"
                android:paddingTop="44.0dip"
                android:paddingRight="9.0dip"
                android:layout_width="fill_parent"
                android:layout_height="367.0dip">
                <android.widget.FavoriteContactAnimView
                    android:gravity="center"
                    android:id="@id/favorites_contacts_view"
                    android:tag="tag_favorites_contacts_view"
                    android:layout_width="334.0dip"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true">
                    <include
                        android:id="@id/favorites_contacts_page_1"
                        layout="@layout/favorites_contacts_page"
                        />
                    <include
                        android:id="@id/favorites_contacts_page_2"
                        layout="@layout/favorites_contacts_page"
                        />
                    <include
                        android:id="@id/favorites_contacts_page_3"
                        layout="@layout/favorites_contacts_page"
                        />
                </android.widget.FavoriteContactAnimView>
                <include
                    layout="@layout/favorites_contacts_indicator"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <include
            layout="@layout/favorites_contacts_card"
            />
    </android.widget.ViewPusher>
    <include
        layout="@layout/favorites_contacts_emptycard"
        />
    <include
        layout="@layout/favorites_contacts_loadingcard"
        />
</android.widget.ContactWidgetRemoteView>
