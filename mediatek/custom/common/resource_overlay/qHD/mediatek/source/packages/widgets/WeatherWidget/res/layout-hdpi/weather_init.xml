<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="75.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/relative"
        android:background="@drawable/wgt_weather_background"
        android:layout_width="fill_parent"
        android:layout_height="378.0dip">
        <TextView
            android:textSize="18.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/setting_textview"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130.0dip"
            android:text="@string/add_setting"
            android:layout_centerHorizontal="true"
