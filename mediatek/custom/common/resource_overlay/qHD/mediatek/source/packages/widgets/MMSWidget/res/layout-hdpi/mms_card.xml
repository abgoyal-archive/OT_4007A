<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent" 
        android:layout_width="fill_parent">
	<RelativeLayout  
	    android:id="@+id/card" 
	    android:background="@drawable/wgt_message_bg" 
	    android:layout_gravity="center_vertical|center_horizontal" 
	    android:layout_marginTop="20dip"
	    android:layout_width="fill_parent" 
	    android:layout_centerHorizontal="true"
	    android:layout_height="397dip">
	    <RelativeLayout 
	        android:id="@+id/contact_info" 
	        android:layout_height="110dip" 
	        android:layout_width="fill_parent">
	        <TextView 
	            android:id="@+id/mms_address" 
	            android:layout_width="150dip" 
	            android:layout_height="wrap_content" 
	            android:layout_marginTop="23dip"
	            android:textSize="20sp" 
	            android:textStyle="bold"
				android:textColor="#FFcd5819"
	            android:layout_marginLeft="135dip"
	            android:singleLine="true">
	            </TextView>
	        <TextView  
	            android:id="@+id/mms_date" 
	            android:layout_width="120dip" 
	            android:layout_height="20dip" 
	            android:textSize="15sp" 
	            android:textColor="#FF52900a"
	            android:layout_marginLeft="135dip" 
	            android:layout_marginTop="50dip">
	            </TextView>
            <ImageView android:id="@+id/mms_ic_sim"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dip"
                android:layout_marginTop="76dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            </ImageView>
        </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/content" 
	        android:tag="body_area_tag"
	        android:layout_centerHorizontal="true" 
	        android:layout_marginTop="109dip" 
	        android:layout_width="fill_parent" 
	        android:paddingLeft="10dip" 
	        android:paddingRight="10dip"
	        android:layout_height="wrap_content">
	            <RelativeLayout 
		        		android:layout_width="270dip" 
			     		android:layout_height="223dip"
			     		android:layout_centerVertical="true"
			     		android:layout_centerHorizontal="true"
		        		android:background="@drawable/attach_frame">
		        		<TextView  
	            		android:id="@+id/subject" 
	            		android:layout_width="200dip" 
	            		android:layout_height="wrap_content" 
	            		android:layout_centerHorizontal="true"
	            		android:textSize="14sp" 
	            		android:layout_marginTop="26dip" 
	            		android:textColor="#000000"
	           		 	android:gravity="center"
	           		 	android:ellipsize="end" 
	           		 	android:lines="1">
	           			 </TextView>
		        		<ImageView 
			            android:id="@+id/attach_thumbnail" 
			            android:tag="attach_thumbnail_tag"
			            android:layout_width="177dip" 
			            android:layout_height="125dip"
			            android:layout_marginTop="61dip" 
			            android:layout_marginLeft="43dip"
			            android:scaleType="fitXY">
			            </ImageView>
	        	</RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:tag="default_body_area_tag"
	        android:layout_centerHorizontal="true" 
	        android:layout_marginTop="109dip" 
	        android:layout_width="fill_parent" 
	        android:paddingLeft="10dip" 
	        android:paddingRight="10dip"
	        android:layout_height="wrap_content">
	        <ImageView 
	        	 android:background="@drawable/default_attach_thumbnail"
			     android:layout_width="270dip" 
			     android:layout_height="223dip"
			     android:layout_centerVertical="true"
			     android:layout_centerHorizontal="true">
			</ImageView>
	        <TextView  
	            android:tag="subject_noattach"
	            android:layout_width="200dip" 
	            android:layout_height="wrap_content" 
	            android:textSize="14sp" 
	            android:textColor="#000000"
	            android:layout_marginTop="26dip" 
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:ellipsize="end" 
	            android:lines="1">
	        </TextView>
	    </RelativeLayout>
	        <Button android:id="@+id/btn_setting"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_alignParentBottom="true" 
	        	android:layout_marginBottom="-1dip"
	        	android:layout_marginLeft="8dip"
	        	android:background="@drawable/selector_setting_btn">
	        </Button>
	        <TextView  
	            android:id="@+id/mms_index" 
	            android:layout_width="100dip" 
	            android:layout_height="wrap_content" 
	            android:gravity="right"
	            android:layout_alignParentRight="true" 
	            android:layout_alignParentBottom="true" 
	            android:layout_marginRight="30dip"
	            android:layout_marginBottom="11dip" 
	            android:textSize="15sp" 
	            android:textColor="#FF827a68">
	        </TextView>
	        <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="8dip"
	        android:layout_marginRight="8dip"
	        android:background="@drawable/wgt_message_bg_color_bar"/>
	</RelativeLayout >

		<android.widget.RotateImageView 
	        android:id="@+id/mms_avatar" 
	        android:layout_width="120dip" 
	        android:layout_height="120dip"
	        android:layout_marginLeft="2dip">
	    </android.widget.RotateImageView>

</RelativeLayout >
